---
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";
// Supports weights 400-700
import "@fontsource-variable/instrument-sans";

import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { fixedTitles } from "@/const/pageTitles";

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  robots?: string;
}
const {
  title = fixedTitles,
  description = "Consulta los horarios, precios y tipos de trenes a Machu Picchu. Compara servicios y encuentra las mejores opciones y reserva tu viaje online facilmente",
  canonical,
  robots,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="description" content={description} />
    {canonical && <link rel="canonical" href={canonical} />}
    {robots && <meta name="robots" content={robots} />}

    <meta property="og:url" content="https://www.trenesamachupicchu.com" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Servicio de tranes a Machu Picchu" />
    <meta
      property="og:description"
      content="Trenes a Machu Picchu horarios, precios y reservas online"
    />
    <meta
      property="og:image"
      content="https://www.trenesamachupicchu.com/og.jpg"
    />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Servicio de trenes a Machu Picchu" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:site" content="@Mapitravel" />
    <meta name="twitter:creator" content="@Mapitravel" />
    <meta name="twitter:title" content="Servicio de trenes a Machu Picchu" />
    <meta
      name="twitter:description"
      content="Trenes a Machu Picchu horarios, precios y reservas online"
    />

    <ClientRouter />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    min-width: min-content;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
</style>
