---
import { ClientRouter } from "astro:transitions";
import "@/styles/global.css";
// Supports weights 400-700
import "@fontsource-variable/instrument-sans";

import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import { fixedTitles } from "@/const/pageTitles";

interface Props {
  title: string;
  description?: string;
  canonical?: string;
  robots?: string;
}
const {
  title = fixedTitles,
  description = "Consulta los horarios, precios y tipos de trenes a Machu Picchu. Compara servicios y encuentra las mejores opciones y reserva tu viaje online facilmente",
  canonical,
  robots,
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>Trenes a Machupicchu</title>
    <ClientRouter />
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    min-width: min-content;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }
</style>
